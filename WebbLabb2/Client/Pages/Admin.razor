@page "/admin"

@using WebbLabb2.Client.PublicClient

@inject PublicClient PublicClient
<div class="nav-item px-3">
    <NavLink class="nav-link" href="admin-products">
        <span class="oi oi-list-rich" aria-hidden="true"></span> Admin Products
    </NavLink>
</div>
<PageTitle>Admin</PageTitle>

<h3>Admin</h3>

<h4 style="margin-top: 50px;">All customers</h4>
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="color-store-primary">
            <tr>
                <th>Name</th>
                <th>Email</th>
                <th>Phone</th>
                <th>Address</th>
            </tr>
        </thead>
        <tbody class="align-middle">
            @foreach (var item in AllCustomers)
            {
                <tr class="tr-hover">
                    <td>@item.FirstName @item.LastName</td>
                    <td>@item.Email</td>
                    <td>@item.CellNumber</td>
                    <td>
                        @item.StreetAddress<br />
                        @item.ZipCode, @item.City
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

<h4 style="margin-top: 50px;">Search customer by Email</h4>
<EditForm Model="Customer" OnValidSubmit="GetCustomerByEmail">
    <div class="form-control">
        <InputText @bind-Value="Email"></InputText>
        <button class="btn btn-primary">Search</button>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="color-store-primary">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                <tr class="tr-hover">
                    <td>@Customer.FirstName @Customer.LastName</td>
                    <td>@Customer.Email</td>
                    <td>@Customer.CellNumber</td>
                    <td>
                        @Customer.StreetAddress<br />
                        @if (@Customer.ZipCode == 0){}else{@Customer.ZipCode} @Customer.City
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</EditForm>
