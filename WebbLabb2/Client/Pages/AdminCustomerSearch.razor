@page "/admincustomersearch"

@using WebbLabb2.Client.PublicClient
@inject PublicClient PublicClient

<link href="css/CommonStyles.css" rel="stylesheet" />

<h3>Search Customer</h3>

<h4 style="margin-top: 50px;">Search customer by Email</h4>
<EditForm Model="Customer" OnValidSubmit="GetCustomerByEmail">
    <div class="form-control">
        <InputText @bind-Value="Email"></InputText>
        <button class="btn btn-primary">Search</button>
    </div>
    <div class="table-responsive">
        <table class="table table-striped">
            <thead class="color-store-primary">
                <tr>
                    <th>Name</th>
                    <th>Email</th>
                    <th>Phone</th>
                    <th>Address</th>
                    <th>Edit</th>
                    <th>Remove</th>
                </tr>
            </thead>
            <tbody class="align-middle">
                <tr class="tr-hover">
                    <td>@Customer.FirstName @Customer.LastName</td>
                    <td>@Customer.Email</td>
                    <td>@Customer.CellNumber</td>
                    <td>
                        @Customer.StreetAddress<br />
                        @if (@Customer.ZipCode == 0) { }
                        else
                        {
                            @Customer.ZipCode
                        }&nbsp;@Customer.City
                    </td>
                    <td>
                        @if (@Customer.FirstName != string.Empty)
                        {
                            <button class="btn btn-store-primary"><span class="oi oi-wrench ms-1"></span></button>
                        }
                        else
                        {
                            <button class="btn btn-store-primary" disabled="disabled"><span class="oi oi-wrench ms-1"></span></button>
                        }
                    </td>
                    <td>
                        <button class="btn btn-close" @onclick="() => ShowDialog = true"></button>
                    </td>
                </tr>
            </tbody>
        </table>
    </div>
</EditForm>

@if (ShowDialog)
{
    <ConfirmationDialog Title="Are you sure?" Message="Pressing 'Yes' will remove selected customer." OnConfirmed="@OnConfirmed" OnCancelled="@Close" />
}

@if (SelectedCustomerEmail != string.Empty)
{
    <AdminCustomerEdit SelectedCustomer="@SelectedCustomerEmail" />
}